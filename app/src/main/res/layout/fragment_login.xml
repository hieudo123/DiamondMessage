<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingEnd="@dimen/_23dp"
    android:paddingStart="@dimen/_23dp"
    tools:ignore="MissingPrefix" >

    <include
        android:id="@+id/actionbar"
        layout="@layout/actionbar_icon_back_white"/>

    <TextView
        android:id="@+id/fragLogin_tvTitle"
        android:text="@string/common_login_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="34sp"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:layout_marginTop="@dimen/_64dp"
        app:layout_constraintTop_toBottomOf="@id/actionbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fontPath="@string/font_roboto_bold"/>

    <TextView
        android:id="@+id/fragLogin_tvSubtitle"
        android:text="@string/login_screen_to_continue"
        android:letterSpacing="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textAllCaps="true"
        app:layout_constraintTop_toBottomOf="@id/fragLogin_tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fontPath="@string/font_roboto_medium" />


    <EditText
        android:id="@+id/fragLogin_etEmail"
        app:layout_constraintTop_toBottomOf="@id/fragLogin_tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_100dp"
        android:hint="@string/common_email"
        android:textColorHint="@color/hint_color"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_email_white"
        android:drawablePadding="@dimen/_10dp"
        android:paddingStart="@dimen/_10dp"
        android:paddingEnd="@dimen/_10dp"
        android:paddingBottom="@dimen/_16dp"
        android:layout_width="@dimen/_0dp"
        android:textSize="19sp"
        android:textColor="@color/white"
        android:inputType="textEmailAddress"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/fragLogin_etPassword"
        app:layout_constraintTop_toBottomOf="@id/fragLogin_etEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_19dp"
        android:hint="@string/common_password"
        android:textColorHint="@color/hint_color"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_lock_outline"
        android:drawablePadding="@dimen/_10dp"
        android:paddingStart="@dimen/_10dp"
        android:paddingEnd="@dimen/_10dp"
        android:paddingBottom="@dimen/_16dp"
        android:layout_width="@dimen/_0dp"
        android:textSize="19sp"
        android:textColor="@color/white"
        android:inputType="textPassword"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/fragLogin_tvForgotPassword"
        android:text="@string/auth_forgot_password_title"
        android:textColor="@color/white_70"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/fragLogin_etPassword"
        app:layout_constraintStart_toStartOf="@id/fragLogin_etPassword"
        app:layout_constraintEnd_toEndOf="@id/fragLogin_etPassword"
        android:layout_width="@dimen/_0dp"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/fragLogin_tvLogin"
        android:textSize="18sp"
        android:text="@string/common_login_title"
        android:layout_marginTop="@dimen/_100dp"
        app:layout_constraintTop_toBottomOf="@id/fragLogin_tvForgotPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/shape_register_button"
        android:layout_width="@dimen/_0dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:padding="@dimen/_8dp"
        android:layout_marginBottom="@dimen/_16dp"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>